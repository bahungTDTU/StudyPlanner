<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <!-- This now forces the app to always be in light mode. -->
    <style name="Base.Theme.StudyPlanner" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.StudyPlanner" parent="Base.Theme.StudyPlanner" />

    <!-- Styles for the statistics cards on the Reports screen -->
    <style name="Widget.App.StatCard" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">?attr/colorSurfaceContainer</item>
        <item name="cardElevation">0dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="Widget.App.StatCard.Content" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.App.StatCard.Title" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?attr/textAppearanceLabelMedium</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="Widget.App.StatCard.Value" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadlineMedium</item>
    </style>

</resources>
