<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.ReportsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Study Insights"
            android:textAppearance="?attr/textAppearanceTitleLarge"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Task Summary"
                android:textAppearance="?attr/textAppearanceTitleMedium" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:columnCount="3"
                android:rowCount="1">

                <androidx.cardview.widget.CardView
                    style="@style/Widget.App.StatCard"
                    android:layout_columnWeight="1">

                    <LinearLayout style="@style/Widget.App.StatCard.Content">
                        <TextView
                            style="@style/Widget.App.StatCard.Title"
                            android:text="Total" />
                        <TextView
                            android:id="@+id/tv_total_tasks"
                            style="@style/Widget.App.StatCard.Value"
                            tools:text="15" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    style="@style/Widget.App.StatCard"
                    android:layout_columnWeight="1">

                    <LinearLayout style="@style/Widget.App.StatCard.Content">
                        <TextView
                            style="@style/Widget.App.StatCard.Title"
                            android:text="Completed" />
                        <TextView
                            android:id="@+id/tv_completed_tasks"
                            style="@style/Widget.App.StatCard.Value"
                            tools:text="10" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    style="@style/Widget.App.StatCard"
                    android:layout_columnWeight="1">

                    <LinearLayout style="@style/Widget.App.StatCard.Content">
                        <TextView
                            style="@style/Widget.App.StatCard.Title"
                            android:text="Overdue" />
                        <TextView
                            android:id="@+id/tv_overdue_tasks"
                            style="@style/Widget.App.StatCard.Value"
                            tools:text="2" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </GridLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Custom Report"
                android:textAppearance="?attr/textAppearanceTitleMedium" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="?attr/colorSurfaceContainer">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Generate a detailed report based on subject and date range."
                        android:textAppearance="?attr/textAppearanceBodyMedium" />

                    <Button
                        android:id="@+id/btn_generate_custom_report"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Generate" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
